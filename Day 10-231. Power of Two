class Solution {
    public boolean isPowerOfTwo(int n) {
        if(n==1){
            return true;
        }
        for(int i=0;i<=n/2;i++){
            double a=Math.pow(2,i);
            if(a==n){
                return true;
            }
            if(a>n){
                return false;
            }
        }
        return false;
    }
}
